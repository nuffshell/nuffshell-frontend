{
  "name": "nuffshell-frontend",
  "description": "The web frontend for Nuffshell; React single page application hosted on Firebase",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all build:tailwind --parallel start:firebase start:tailwind start:react",
    "start:react": "react-scripts start",
    "prebuild": "NODE_ENV=production run-s build:tailwind",
    "build": "react-scripts build",
    "build:tailwind": "tailwind build src/main.css -o public/main.css",
    "start:tailwind": "chokidar 'src/**/*.css' -c 'npm run build:tailwind'",
    "start:firebase": "firebase serve -p 3001",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "proxy": "http://localhost:3001",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "classnames": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "web-vitals": "^0.2.4",
    "zustand": "^3.2.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.9.9",
    "@types/react-router-dom": "^5.1.6",
    "autoprefixer": "^10.0.2",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.8",
    "prettier": "^2.2.0",
    "tailwindcss": "^2.0.1",
    "typescript": "4.0.3"
  }
}
